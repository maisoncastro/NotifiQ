<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fname,
                required: false,
                autofocus: true,
                label: 'First Name', 
                input_html: { autocomplete: "fname" }%>
    <%= f.input :lname,
                required: false,
                autofocus: true,
                label: 'Last Name', 
                input_html: { autocomplete: "lname" }%>
    <%= f.input :username,
                required: true,
                autofocus: true,
                label: 'Username', 
                error: 'Username is mandatory, please specify one',
                input_html: { autocomplete: "username" }%>            
    <%= f.input :email,
                required: true,
                autofocus: true,
                # error: 'Email is mandatory, please specify one',
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                # error: 'Password is mandatory, please specify one',
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
