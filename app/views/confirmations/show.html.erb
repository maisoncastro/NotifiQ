<body class="mobile-page">

  <%= render 'mobileheader' %>

<div class="container-mobile">

  <div class="mobile-qrcode">
      <%= @svg.html_safe %>
  </div>

  <div class="box-container-show">
    <div>
      <h4><%= @store.name %></h4>
      <p>Store description: Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </div>
  </div>

  <div class="box-container-show">
    <h4>A little more information</h4>
    <p><%= @store.message %></p>
  </div>

  <div class="d-flex justify-content-center">
    <div class="box-info">
      <h4>Approx. wait</h4>
      <h3>5</h3>
      <h4>minutes</h4>
    </div>

    <div class="box-info">
      <h4>Number</h4>
      <h3>3</h3>
      <h4>in line</h4>
    </div>
  </div>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#nextinline" >
    Next in line
  </button>

  <!-- Modal Next-->
  <div class="modal fade" id="nextinline" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog-centered" role="document" id="modal-center">
      <div>

        <div class="modal-dialog" role="document" id="modal-size">
            <div class="modal-content" id="modal-top-alert">
              <div class="modal-body">
                <h4>It's almost your turn!</h4>
              </div>
            </div>
        </div>

        <div class="modal-dialog" role="document">
            <div class="modal-content" id="modal-show">
              <div class="modal-body">
                <h4>See you in</h4>
                <h2>5 mins</h2>
              </div>
              <div class="modal-foot">
                <button type="button" class="btn-purple" data-dismiss="modal">Show your QR code</button>
              </div>
            </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#yourturn" >
    Your turn!
  </button>

  <!-- Modal Turn-->
  <div class="modal fade" id="yourturn" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog-centered" role="document" id="modal-center">
      <div>

        <div class="modal-dialog" role="document" id="modal-size">
            <div class="modal-content" id="modal-top-alert">
              <div class="modal-body">
                <h4>It's your turn!</h4>
              </div>
            </div>
        </div>

        <div class="modal-dialog" role="document">
            <div class="modal-content" id="modal-show">
              <div class="modal-body">
                <h2>ðŸŽ‰ðŸŽ‰ðŸŽ‰</h2>
              </div>
              <div class="modal-foot">
                <button type="button" class="btn-purple" data-dismiss="modal">Show your QR code</button>
              </div>
            </div>
        </div>

      </div>
    </div>
  </div>

</div>
